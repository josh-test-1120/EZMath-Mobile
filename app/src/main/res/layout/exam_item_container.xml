<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/testContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".adaptors.ExamAdaptor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/testName"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:text="Test name"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/testDate"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:text="Test date"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/testOn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="at"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/testTime"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:text="- Test time"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/testDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/delete_test" />

        <ImageView
            android:id="@+id/testEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/edit_test" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>