<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/testName"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Test name"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/testTime"
            android:layout_width="181dp"
            android:layout_height="35dp"
            android:text="- Test time"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/testDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/delete_test"/>

        <ImageView
            android:id="@+id/testEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/edit_test" />


    </LinearLayout>

    <TextView
        android:id="@+id/testDate"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="left"
        android:text="Test date"
        android:textSize="30sp"
        android:textColor="@color/white" />

</LinearLayout>