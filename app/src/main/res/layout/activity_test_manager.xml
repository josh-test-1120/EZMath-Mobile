<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TestManagerActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Test Menu"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/blueSeperator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:background="@color/blue_seperator"/>

    <!--Should be some sort of get month call from database-->
    <TextView
        android:id="@+id/monthText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="left"
        android:text="Month"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/blueSeperator"/>

    <LinearLayout
        android:id="@+id/whiteSeperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/monthText"
        android:background="@color/white"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/whiteSeperator">

        <LinearLayout
            android:id="@+id/testContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/whiteSeperator"/>
    </ScrollView>

    <Button
        android:id="@+id/buttonAddTest"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/blue_seperator"
        android:includeFontPadding="false"
        android:text="Schedule a Test"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView"/>

</androidx.constraintlayout.widget.ConstraintLayout>