<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestManagerActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Schedule a Test"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/blueSeperator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/topText"
        android:background="@color/blue_seperator"/>
    <!--Should be some sort of get month call from database-->

    <LinearLayout
        android:id="@+id/testTimeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/blueSeperator">

        <TextView
            android:id="@+id/testTimeTxt"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="Test Time:"
            android:textSize="30sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/blueSeperator"/>

        <EditText
            android:id="@+id/inputTestTime"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/round_text_input"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAlignment="gravity"
            android:textColor="@color/input_text"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/testDateInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/testTimeInput">

        <TextView
            android:id="@+id/testDate"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="Test Date:"
            android:textSize="30sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/testNameAndTime"/>

        <EditText
            android:id="@+id/inputTestDate"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/round_text_input"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAlignment="gravity"
            android:textColor="@color/input_text"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blueSeperatorTwo"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/testDateInput"
        android:background="@color/blue_seperator"/>
    <!--Exam ID-->
    <LinearLayout
        android:id="@+id/textExamInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/blueSeperatorTwo">

        <TextView
            android:id="@+id/textExam"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="Exam ID:"
            android:textSize="30sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/blueSeperator"/>

        <EditText
            android:id="@+id/inputTestExam"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/round_text_input"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAlignment="gravity"
            android:textColor="@color/input_text"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/testClassInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textExamInput">

        <TextView
            android:id="@+id/testClass"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:text="Class ID:"
            android:textSize="30sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/testNameAndTime"/>

        <EditText
            android:id="@+id/inputTestClass"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="@drawable/round_text_input"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAlignment="gravity"
            android:textColor="@color/input_text"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/submitCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/testClassInput">

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/blue_seperator"
            android:text="Submit"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textSize="45dp"
            tools:layout_editor_absoluteX="211dp" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/cancel_background"
            android:includeFontPadding="false"
            android:text="Cancel"
            android:textAlignment="center"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="211dp" />

    </LinearLayout>

    <GridLayout xmlns:grid="http://schemas.android.com/apk/tools"
        android:id="@+id/navigationLayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/redBackground"
        android:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:srcCompat="@drawable/hamburger"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            grid:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:srcCompat="@drawable/home"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            grid:layout_gravity="center"/>

        <ImageView
            android:id="@+id/testManagerButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:srcCompat="@drawable/calendar"
            android:background="@color/darkRedBackground"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            grid:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:srcCompat="@drawable/notification"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            grid:layout_gravity="center"/>

    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>